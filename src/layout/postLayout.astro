---
const { frontmatter } = Astro.props;
import dayjs from "dayjs";
import MainLayout from "./mainLayout.astro";
import Thumbnail from "../components/thumbnail.astro";
import Column from "./column.astro";
---

<MainLayout title={frontmatter.title} paddingTop="true" wrapsBlogPost="true">
  <nav class="relative hidden justify-self-end lg:block">
    <div class="sticky top-20"></div>
  </nav>
  <Column wrapsBlogPost="true">
    <main class="border-bottom">
      <header class="mb-10">
        <Thumbnail
          loading="eager"
          alt={frontmatter.title}
          internal={frontmatter.image.internal}
          src={frontmatter.image.src}
        />
        <div class="mt-5">
          <time
            class="text-xs text-neutral-800 dark:text-neutral-400"
            datetime={frontmatter.pubDate}
            >{dayjs(frontmatter.pubDate).format("MMMM D, YYYY")}</time
          >

          <h1 class="text-3xl">{frontmatter.title}</h1>
        </div>
      </header>
      <article
        class="underline-offset-3 leading-relaxed prose-headings:mb-2 prose-h2:text-lg prose-p:mb-7 prose-a:text-accent-light prose-a:underline hover:prose-a:text-neutral-200 prose-ol:mb-7 prose-ol:list-inside prose-ol:list-decimal prose-ul:mb-7 prose-ul:list-inside prose-ul:list-disc dark:prose-a:text-accent-dark"
      >
        <slot />
      </article>
    </main>
  </Column>
  <aside class="hidden justify-self-start lg:block"></aside>
</MainLayout>
