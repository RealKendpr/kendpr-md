---
import "../global.css";
import Footer from "../components/footer/footer.astro";
import { Navigation } from "../components/navigation/navigation";
const { title, paddingTop, wrapsBlogPost, pageType } = Astro.props;

interface Props {
  title: string;
  paddingTop?: boolean;
  wrapsBlogPost?: boolean;
  pageType: string;
}
---

<html class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="/kendpr-md/assets/icons/logo-for-light.svg"
      type="image/svg+xml"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="shortcut icon"
      href="/kendpr-md/assets/icons/logo-for-dark.svg"
      type="image/svg+xml"
      media="(prefers-color-scheme: dark)"
    />
    <title>{title}</title>
  </head>
  <body
    class="select-a select-li select-p select-headings select-imgs grid min-h-dvh grid-rows-[1fr,_auto] overflow-x-hidden bg-neutral-400 font-display maxSm:grid-cols-1 dark:bg-neutral-900"
  >
    <Navigation pageType={pageType} client:idle />
    <div
      data-paddingtop={paddingTop === true ? "true" : "false"}
      data-wrapsblogpost={wrapsBlogPost === true ? "true" : "false"}
      class="w-full *:data-paddingtop:pt-20 lg:grid lg:grid-cols-[1fr,_640px,_1fr] lg:data-wrapsblogpost:gap-x-5 lg:data-wrapsblogpost:px-10"
    >
      <slot />
    </div>
    <Footer pageType={pageType} />
  </body>
</html>
