---
import "../global.css";
import Footer from "../components/footer/footer.astro";
import { Navigation } from "../components/navigation/navigation";
const { title, paddingTop, wrapsBlogPost } = Astro.props;
---

<!-- why tailwind classes are kind of duplicated in astro -->
<html class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="/kendpr-md/assets/icons/logo-is_light.svg"
      type="image/x-icon"
    />
    <title>{title}</title>
  </head>
  <body
    class="grid min-h-dvh grid-rows-[1fr,auto] overflow-x-hidden bg-neutral-400 font-display prose-headings:text-neutral-800 prose-p:text-neutral-700 prose-a:text-neutral-700 prose-a:duration-200 prose-a:ease-in-out hover:prose-a:text-accent-light hover:prose-a:underline prose-li:text-neutral-700 prose-img:pointer-events-none prose-img:select-none dark:bg-neutral-900 dark:prose-headings:text-neutral-400 dark:prose-p:text-neutral-500 dark:prose-a:text-neutral-500 dark:hover:prose-a:text-accent-dark dark:prose-li:text-neutral-500"
  >
    <Navigation client:idle />
    <div
      data-paddingtop={paddingTop == "true" ? "true" : "false"}
      data-wrapsBlogPost={wrapsBlogPost === "true" ? "true" : "false"}
      class="*:data-paddingtop:pt-20 lg:data-wrapsBlogPost:gap-x-5 lg:data-wrapsBlogPost:px-10 w-full lg:grid lg:grid-cols-[1fr,_640px,_1fr]"
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
